<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mega_texto">
        <item name="android:fontFamily">@font/poppins_black</item>
        <item name="android:textColor">@color/color3</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="texto_titulo">
        <item name="android:fontFamily">@font/poppins_extralight</item>
        <item name="android:textColor">@color/color5</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="texto_normal">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="boton_normal">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/fondo_boton_completo</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="mi_radio_button">
        <item name="android:drawableTop">@drawable/fondo_radio_button</item>
        <item name="android:button">@null</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">100dp</item>
    </style>

    <style name="boton_escritorio">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:elevation">5dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingVertical">20dp</item>
    </style>

</resources>