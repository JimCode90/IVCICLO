<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_text_principal_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="style_text_secundario_plomo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">46dp</item>
        <item name="android:textColor">@color/plomo_principal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="style_boton_outline">
        <item name="android:layout_width">151dp</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:layout_marginStart">41dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="style_boton_outline_rosado">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/style_boton_outline_rosado</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="style_boton_rosado">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/style_boton_rosado</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="boton_menu">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/style_boton_menu</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:elevation">5dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="boton_menu_circulo">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/style_boton_circulo</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">5dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>