<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_paises"
    tools:context=".OficinasActivity">

    <LinearLayout
        android:id="@+id/contenedor"
        android:layout_width="0dp"
        android:layout_height="360dp"
        android:layout_marginStart="@dimen/espaciado"
        android:layout_marginTop="@dimen/espaciado"
        android:layout_marginEnd="@dimen/espaciado"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contenedor">

        <RadioButton
            android:id="@+id/rbTokio"
            style="@style/mi_radio_button"
            android:layout_height="wrap_content"
            android:text="@string/tokio"
            tools:ignore="TextContrastCheck" />

        <RadioButton
            android:id="@+id/rbBarcelona"
            style="@style/mi_radio_button"
            android:layout_height="wrap_content"
            android:text="@string/barcelona" />

        <RadioButton
            android:id="@+id/rbEstocolmo"
            style="@style/mi_radio_button"
            android:layout_height="wrap_content"
            android:text="@string/estocolmo" />

    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>